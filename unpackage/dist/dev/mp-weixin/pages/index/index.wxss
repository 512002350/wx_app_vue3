html {
  overflow: -moz-scrollbars-none;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.content {
  overflow: hidden;
  -ms-overflow-style: none;
}
.head {
  /* 背景颜色 */
  position: absolute;
  width: 430px;
  height: 15vh;
  left: 0%;
  right: 0%;
  top: 0%;
  bottom: -29.91%;
  box-shadow: 0px 1px 2px 0px rgba(0, 0, 0, 0.25);
  background: #ffd141;
}
.title {
  position: relative;
  top: 13vw;
  left: 20px;
  font-size: 20px;
  color: black;
  font-weight: 900;
  letter-spacing: 2px;
}
.video_link {
  position: absolute;
  top: 17vh;
}
.lj_img {
  /* 链接 */
  position: absolute;
  width: 28px;
  height: 28px;
  left: 18px;
  right: 335px;
}
.lj_div {
  position: relative;
  left: 50px;
  font-weight: bold;
}
.link_input {
  position: absolute;
  top: 21vh;
  left: 18px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.link_input > input {
  box-sizing: border-box;
  border: 1px solid black;
  border-radius: 5px;
  background: white;
  width: 285px;
  height: 49.66px;
  text-indent: 1rem;
  margin-right: 10px;
}
.open_video {
  width: 71px;
  height: 57px;
  position: relative;
  left: 20px;
}
.video_show {
  /* 链接视频 */
  position: absolute;
  top: 30vh;
  width: 100%;
  margin: 0 auto;
  display: flex;
}
.video_show_img {
  width: 90%;
  margin: 0 auto;
  border: 1px solid black;
  border-radius: 3px;
  box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
}
.start_btn {
  position: absolute;
  top: 60vh;
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}
.start_btn_img {
  width: 251px;
  height: 57px;
}
.suggest {
  position: absolute;
  top: 70vh;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}
.suggest_img {
  width: 85%;
}